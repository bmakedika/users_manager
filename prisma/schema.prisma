generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id        String      @id @default(uuid())
    name      String
    phone     String ?
    email     String   @unique
    password  String
    createdAt DateTime  @default(now())
    updatedAt DateTime @updatedAt
}